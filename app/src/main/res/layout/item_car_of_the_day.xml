<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_dimen_margin"
    android:layout_marginBottom="@dimen/small_dimen_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/car_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/selection_band_overlay" />

    <TextView
        android:id="@+id/car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.4"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="@dimen/medium_text_size_18"
        android:textStyle="bold"
        tools:text="Text" />

    <Button
        android:id="@+id/update_car"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/big_dimen_margin_top"
        android:background="@color/silver"
        android:text="@string/update_car" />

</LinearLayout>