<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/second_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/mid_dimen_margin"
        android:text="Android Developers"
        android:textColor="@color/blue"
        android:textSize="@dimen/mid_text_size" />

    <EditText
        android:id="@+id/greetings_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mid_dimen_margin"
        android:hint="Greetings"
        android:textColor="@color/silver"
        android:textSize="@dimen/medium_text_size" />

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/big_dimen_margin_top"
        android:background="@color/silver"
        android:text="Finish second activity"
        android:textColor="@color/blue" />

</LinearLayout>